{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "./node_modules/.bin/astro dev",
      "name": "Development server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "./node_modules/.bin/astro build",
      "name": "Build server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "./node_modules/.bin/astro preview",
      "name": "Preview server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Deploy (build + wrangler deploy)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "args": [
        "run",
        "deploy"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}

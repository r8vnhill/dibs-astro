---
import { buildHeadPageMeta, type PageMeta } from "~/utils/page-meta";

interface Props {
    title?: string;
    description?: string;
    url?: string;
    type?: "website" | "article";
    pageMeta?: PageMeta;
}

/**
 * Destructure default metadata values from Astro.props.
 * These can be overridden when the component is used.
 */
const {
    title = "DIBS",
    description = "Diseño e Implementación de Bibliotecas de Software",
    url = "https://dibs.ravenhill.cl",
    type = "website",
    pageMeta,
} = Astro.props as Props;

const resolvedMeta = buildHeadPageMeta({
    title,
    url,
    pageMeta: pageMeta ?? { type },
});
---

<!-- Character encoding -->
<meta charset="utf-8" />

<!-- Browser tab title -->
<title>{title}</title>

<!-- SEO: Meta description used by search engines -->
<meta name="description" content={description} />

<!-- Favicon for browser tab icon -->
<link
    rel="icon" href="/online-library.ico"
    type="image/x-icon"
/>

<!-- Responsive design -->
<meta name="viewport" content="width=device-width" />

<!-- Generator metadata for Astro -->
<meta name="generator" content={Astro.generator} />

<!-- Sitemap for search engine indexing -->
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Open Graph (OG) metadata for link previews on social platforms -->
<!-- Title shown on social shares -->
<meta property="og:title" content={title} />
<!-- Type of content, e.g., website, article -->
<meta property="og:type" content={resolvedMeta.type} />
<!-- Canonical URL of the page -->
<meta property="og:url" content={resolvedMeta.canonicalUrl} />
<!-- Description shown on social shares -->
<meta property="og:description" content={description} />
<!-- Name of the website -->
<meta property="og:site_name" content="DIBS" />
<!-- Locale for language and region -->
<meta property="og:locale" content="es_CL" />

<!-- Twitter Card metadata for richer sharing -->
<!-- Card type for preview -->
<meta name="twitter:card" content="summary_large_image" />
<!-- Title for Twitter preview -->
<meta name="twitter:title" content={title} />
<!-- Description for Twitter preview -->
<meta name="twitter:description" content={description} />

<!-- Zotero / Highwire citation metadata -->
<meta name="citation_title" content={title} />
{
    resolvedMeta.citationAuthors.map((author) => (
        <meta name="citation_author" content={author} />
    ))
}
{resolvedMeta.citationDate && <meta name="citation_date" content={resolvedMeta.citationDate} />}
{
    resolvedMeta.citationLastModifiedDate &&
    <meta
        name="citation_last_modified_date"
        content={resolvedMeta.citationLastModifiedDate}
    />
}
<meta name="citation_public_url" content={resolvedMeta.canonicalUrl} />
<meta name="citation_language" content={resolvedMeta.citationLanguage} />

{
    resolvedMeta.jsonLd && (
        <script
            type="application/ld+json"
            set:html={JSON.stringify(resolvedMeta.jsonLd)}
        />
    )
}

<!-- Custom font for 404 pages -->
<link
    href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet"
/>

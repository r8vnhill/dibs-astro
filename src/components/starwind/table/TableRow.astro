---
/**
 * TableRow.astro - Starwind Table row
 * -----------------------------------
 * Renders a <tr> with optional state styling.
 * Supports visual feedback on hover and selection while inheriting padding density from the parent <Table>.
 */

import type { HTMLAttributes } from "astro/types";
import { type VariantProps } from "tailwind-variants";
import { tableRowStyles } from "./table-variants";

/**
 * Props accepted by the TableRow component.
 */
type Props = HTMLAttributes<"tr"> & VariantProps<typeof tableRowStyles>;

const props = Astro.props satisfies Props;
const { class: className, intent, density, hoverable, ...rest } = props;

export type { Props as TableRowProps };
---

<tr
    data-table-row class={tableRowStyles({ class: className, intent, density, hoverable })}
    {...rest}
>
    <slot />
</tr>

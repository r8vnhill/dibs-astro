---
/**
 * TableHeader.astro - Starwind Table header
 * -----------------------------------------
 * Renders the <thead> element of a table with optional styling and variants.
 * Includes default border and layout behavior using Tailwind utilities.
 */

import type { HTMLAttributes } from "astro/types";
import { type VariantProps } from "tailwind-variants";
import { tableHeaderSection } from "./table-variants";

/**
 * Props supported by the TableHeader component.
 */
type Props = HTMLAttributes<"thead"> & VariantProps<typeof tableHeaderSection>;

const props = Astro.props satisfies Props;
const { class: className, sticky, elevated, ...rest } = props;

export type { Props as TableHeaderProps };
---

<thead
    data-table-header class={tableHeaderSection({ class: className, sticky, elevated })}
    {...rest}
>
    <slot />
</thead>

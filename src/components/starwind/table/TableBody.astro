---
/**
 * TableBody.astro â€“ Starwind table body
 * -------------------------------------
 * Renders the `<tbody>` element of a table, styled via Tailwind variants.
 * Allows future extension for striping or condensed spacing.
 */

import type { HTMLAttributes } from "astro/types";
import { tv, type VariantProps } from "tailwind-variants";

/**
 * Props for TableBody component.
 */
type Props = HTMLAttributes<"tbody"> &
  VariantProps<typeof tableBody>;

/**
 * Tailwind Variants for styling the table body.
 */
const tableBody = tv({
  base: "[&_tr:last-child]:border-0",
  variants: {
    striped: {
      true: "[&_tr:nth-child(even)]:bg-muted/50",
      false: "",
    },
  },
  defaultVariants: {
    striped: false,
  },
});

const { class: className, striped, ...rest } = Astro.props;
---

<tbody
  data-table-body
  class={tableBody({ class: className, striped })}
  {...rest}
>
  <slot />
</tbody>

---
/**
 * Pros.astro
 * ----------
 * Renders a stylized "Pros" section using the ContentBlock component.
 * This component is designed to be used within a pros/cons layout, applying green coloring and a
 * left border to match the "positive" context.
 *
 * The visual styles are controlled through Tailwind classes and centralized in `blockVariants` to
 * allow consistent theming.
 */

import ContentBlock from "./ContentBlock.astro";
import { blockVariants } from "./shared";

export interface Props {
    /**
     * Optional custom title to override the default.
     */
    title?: string;
    /**
     * Fallback title when `title` is not provided.
     */
    defaultTitle?: string;
    /**
     * Additional Tailwind CSS classes for the container.
     */
    class?: string;
}

// Destructure Astro props and assign default values.
const variant = "pros" as const;
const variantConfig = blockVariants[variant];
const { title, defaultTitle = variantConfig.defaultTitle, class: className } = Astro.props as Props;
---

<!-- Render a reusable ContentBlock component. -->
<ContentBlock
    {title} {defaultTitle}
    class:list={["border-l-4", "pl-4", blockVariants[variant].border, className]}
    titleClass={blockVariants[variant].title}
>
    <!-- Render the section content -->
    <slot />
</ContentBlock>

---
import ContentBlock from "./ContentBlock.astro";

export interface Props {
  title?: string;
  defaultTitle?: string;
  class?: string;
}

const { title, defaultTitle = "Limitaciones", class: className } = Astro.props;
---

<ContentBlock
  title={title}
  defaultTitle={defaultTitle}
  class={`bg-red-50 dark:bg-red-900 text-red-900 dark:text-red-50 border border-red-200 dark:border-red-700 ${className ?? ""}`}
>
  <slot />
</ContentBlock>

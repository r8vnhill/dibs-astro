---
import CalloutShell from "./CalloutShell.astro";
import { calloutVariants } from "./shared";
import type { BaseCalloutProps } from "./shared";

type HintsProps = BaseCalloutProps;

const variant = "hints" as const;
const variantConfig = calloutVariants[variant];

const { title = variantConfig.title, icon = variantConfig.icon, ...rest } =
  Astro.props as HintsProps & Record<string, any>;
---
<CalloutShell
  variant={variant}
  title={title}
  icon={icon}
  bodyClass="mt-3"
  collapsible
  {...rest}
>
  <slot name="title">{title}</slot>
  <slot />
</CalloutShell>

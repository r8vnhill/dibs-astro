---
import * as Icons from "~/assets/img/icons";
import CalloutShell from "./CalloutShell.astro";
import { calloutVariants } from "./shared";
import type { BaseCalloutProps } from "./shared";

type ExplanationProps = BaseCalloutProps;

/* -------------------- Resolve props & defaults -------------------- */
const variant = "explanation" as const;
const variantConfig = calloutVariants[variant];

const { title = variantConfig.title, icon = variantConfig.icon, ...rest } =
  Astro.props as ExplanationProps & Record<string, any>;
---
<CalloutShell
  variant={variant}
  title={title}
  icon={icon}
  bodyClass="[&_.listitem__icon]:text-[var(--callout-title-color)]"
  {...rest}
>
  <slot name="title">{title}</slot>
  <slot />
</CalloutShell>

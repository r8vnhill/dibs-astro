---
import CalloutHeading from "./CalloutHeading.astro";
import type { BaseCalloutProps } from "./shared";
import * as icons from "~/assets/img/icons";

type DangerProps = BaseCalloutProps;

/* -------------------- Resolve props & defaults -------------------- */
const {
  title = "Peligro",
  icon: Icon = icons.Skull,
  headingLevel = "h3",
  headingId,
  class: className = "",
  headingClass = "",
  iconClass = "",
  ariaLabel,
  compact = false,
  prose = true,
  // Any other attributes will be filtered and forwarded to <section>
  ...rest
} = Astro.props as DangerProps & Record<string, any>;

const resolvedHeadingId = headingId ?? `danger-${crypto.randomUUID()}`;

/**
 * Forward only safe/expected attributes to the <section> (e.g., id, data-*, aria-*).
 * This keeps the component flexible without opening it to accidental attribute leakage.
 */
const passthrough = Object.fromEntries(
  Object.entries(rest).filter(
    ([k]) => k === "id" || k.startsWith("data-") || k.startsWith("aria-")
  )
);
---

<section
  class:list={[
    "danger relative rounded-md shadow-sm",
    compact ? "px-4 py-3" : "px-5 py-4",
    className,
  ]}
  style={{
    // Pass resolved colors down to the child heading through CSS variables.
    "--callout-title-color": "var(--danger__title-color)",
    "--callout-icon-color": "var(--danger__icon-color)",
  }}
  role="region"
  aria-labelledby={resolvedHeadingId}
  {...ariaLabel ? { "aria-label": ariaLabel } : {}}
  {...passthrough}
>
  <!-- Heading row (icon + title). -->
  <CalloutHeading
    Icon={Icon}
    heading={title}
    headingLevel={headingLevel}
    headingId={resolvedHeadingId}
    class={`danger__title ${headingClass}`}
    iconClass={`danger__icon ${iconClass}`}
  >
    <slot name="title">{title}</slot>
  </CalloutHeading>

  <!-- Body content. Enable `prose` when you want Typography styles. -->
  <div
    class:list={[
      "danger__body",
      prose &&
        "prose prose-neutral dark:prose-invert max-w-none prose-p:my-0 prose-p:leading-relaxed",
    ]}
  >
    <slot />
  </div>
</section>

<style scoped>
  .danger {
    padding: 1rem 1.25rem;
    border-radius: 0.375rem;
    margin: 1rem 0;
    background-color: var(--danger__bg-color);
    border-left: 4px solid var(--danger__border-color);
  }

  /* NOTE:
     The rule below assumes you define *-dark variables globally (e.g., in a tokens.css).
     If you rely entirely on :root.dark overrides above, you can remove this block. */
  :global([data-theme="dark"]) :where(.danger) {
    background-color: var(--danger__bg-color-dark);
    border-left-color: var(--danger__border-color-dark);
  }

  /* ------------------------------------------------------------
     Body rhythm adjustments
     ------------------------------------------------------------ */
  .danger__body :where(p:first-child) {
    margin-top: 0;
  }
  .danger__body :where(p:last-child) {
    margin-bottom: 0;
  }
</style>

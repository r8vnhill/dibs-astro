---
import CalloutHeading from "./CalloutHeading.astro";
import type { BaseCalloutProps } from "./shared";
import * as Icons from "~/assets/img/icons";

type TipProps = BaseCalloutProps;

/* -------------------- Resolve props & defaults -------------------- */
const {
  title = "Tip",
  icon: Icon = Icons.Lightbulb,
  headingLevel = "h3",
  headingId,
  class: className = "",
  headingClass = "",
  iconClass = "",
  ariaLabel,
  compact = false,
  prose = true,
  // Any other attributes will be filtered and forwarded to <section>
  ...rest
} = Astro.props as TipProps & Record<string, any>;

const resolvedHeadingId = headingId ?? `tip-${crypto.randomUUID()}`;

/**
 * Forward only safe/expected attributes to the <section> (e.g., id, data-*, aria-*).
 * This keeps the component flexible without opening it to accidental attribute leakage.
 */
const passthrough = Object.fromEntries(
  Object.entries(rest).filter(
    ([k]) => k === "id" || k.startsWith("data-") || k.startsWith("aria-")
  )
);
---

<section
  class:list={[
    "tip relative rounded-md shadow-sm",
    compact ? "px-4 py-3" : "px-5 py-4",
    className,
  ]}
  style={{
    // Pass resolved colors down to the child heading through CSS variables.
    "--callout-title-color": "var(--tip__title-color)",
    "--callout-icon-color": "var(--tip__title-color)",
  }}
  role="region"
  aria-labelledby={resolvedHeadingId}
  {...ariaLabel ? { "aria-label": ariaLabel } : {}}
  {...passthrough}
>
  <!-- Heading row (icon + title). -->
  <CalloutHeading
    Icon={Icon}
    headingLevel={headingLevel}
    headingId={resolvedHeadingId}
    class={`tip__title ${headingClass}`}
    iconClass={`tip__icon ${iconClass}`}
  >
    <slot name="title">{title}</slot>
  </CalloutHeading>

  <!-- Body content. Enable `prose` when you want Typography styles. -->
  <div
    class:list={[
      "tip__body",
      prose &&
        "prose prose-neutral dark:prose-invert max-w-none prose-p:my-0 prose-p:leading-relaxed",
    ]}
  >
    <slot />
  </div>
</section>

<style scoped>
  :root {
    --tip__bg-color: #e6f4ea;
    --tip__border-color: #66bb6a;
    --tip__title-color: #2e7d32;
  }

  :root.dark {
    --tip__bg-color: #1b3527;
    --tip__border-color: #81c784;
    --tip__title-color: #c8e6c9;
  }

  .tip {
    padding: 1rem 1.25rem;
    border-radius: 0.375rem;
    margin: 1rem 0;
    background-color: var(--tip__bg-color);
    border-left: 4px solid var(--tip__border-color);
  }

  :global([data-theme="dark"]) :where(.tip) {
    background-color: var(--tip__bg-color-dark);
    border-left-color: var(--tip__border-color-dark);
  }

  .tip__body :where(p:first-child) {
    margin-top: 0;
  }
  .tip__body :where(p:last-child) {
    margin-bottom: 0;
  }
</style>

---
import PowerShellBlock from "./PowerShellBlock.astro";
import PowerShellTerminal from "./PowerShellTerminal.astro";

type Props = {
  code: string;
  command: string;
};

const { code, command }: Props = Astro.props;
---

<PowerShellBlock code={code}>
  <span slot="title">
    <slot name="title" />
  </span>
  <span slot="source">
    <slot name="source" />
  </span>
</PowerShellBlock>

<Fragment slot="description"></Fragment>
<p>
  Guarda este script como <code slot="source"></code> y ejec√∫talo en la terminal:
</p>

<PowerShellTerminal code={command}/>

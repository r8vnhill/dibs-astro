---
import InlineText from "./InlineText.astro";

type Props = {
    as?: "em" | "i" | "span";
    class?: string;
    href?: string;
    newTab?: boolean;
    [key: string]: any;
};

const { as = "em", ...rest } = Astro.props as Props;
---

<InlineText
    {as} classes={["italic", "text-primary"]}
    {...rest}
><slot /></InlineText>

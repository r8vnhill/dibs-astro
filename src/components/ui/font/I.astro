---
// I.astro
type Props = {
    class?: string;
    as?: "em" | "i" | "span";
    [key: string]: any;
};
const { class: className = "", as = "em", ...rest } = Astro.props as Props;
const Tag = as;
const classes = ["italic", "text-primary", className].filter(Boolean);
---
<Tag class:list={classes} {...rest}><slot /></Tag>

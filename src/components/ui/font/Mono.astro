---
import InlineText from "./InlineText.astro";

type Props = {
    as?: "code" | "span" | "kbd";
    class?: string;
    href?: string;
    newTab?: boolean;
    [key: string]: any;
};

const { as = "code", ...rest } = Astro.props as Props;
---

<InlineText
    {as} classes={["font-mono"]}
    {...rest}
><slot /></InlineText>

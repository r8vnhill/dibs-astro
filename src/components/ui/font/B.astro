---
import { Link } from "../links";

type Props = {
    class?: string;
    href?: string;
};

const { class: className = "", href } = Astro.props;
---

{
    href ? <Link {href} class:list={["font-bold", className]}><slot /></Link> : (
        <span class:list={["font-bold", className]}><slot /></span>
    )
}

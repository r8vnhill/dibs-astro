---
import InlineText from "./InlineText.astro";

type Props = {
    as?: "strong" | "span" | "b";
    class?: string;
    href?: string;
    newTab?: boolean;
    [key: string]: any;
};

const { as = "strong", ...rest } = Astro.props as Props;
---

<InlineText
    {as} classes={["font-bold"]}
    {...rest}
><slot /></InlineText>
